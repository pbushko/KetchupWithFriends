<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peach_puff_polka_dot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@android:style/Theme.WithActionBar">

        <ImageView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:translationZ="10dp"
            app:srcCompat="@drawable/settings_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/volume_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:translationZ="10dp"
                        app:srcCompat="@drawable/volume_settings_icon" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        style="@android:style/Widget.CompoundButton.CheckBox"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:fontFamily="casual"
                        android:text="Music"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/logOutButton"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dategranolabar"
                    android:text="Log Out" />

            </LinearLayout>

            <ImageView
                android:id="@+id/tomato"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:layout_weight="1"
                android:translationZ="10dp"
                app:srcCompat="@drawable/tsunmato" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>